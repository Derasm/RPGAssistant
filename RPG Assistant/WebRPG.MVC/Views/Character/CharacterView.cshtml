@model IEnumerable<WebRPG.MVC.UserServiceReference.Character>

@{
    ViewBag.Title = "CharacterView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CharacterView</h2>

<p>
    @Html.ActionLink("Create Character", "CreateCharacterView")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BackGroundStory)
        </th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BackGroundStory)
                </td>
                <td>
                    @Html.ActionLink("Edit", "CharacterUpdateView", new {  Name=item.Name  }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    }

</table>
